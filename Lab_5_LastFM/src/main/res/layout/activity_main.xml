<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ms_lab_5_lastfm.MainActivity">

    <EditText
        android:id="@+id/editText_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:text="@string/artist_name"
        android:textColor="@android:color/white"
        tools:text="@string/artist_name" />

    <Button
        android:id="@+id/button_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_artist"
        android:layout_marginTop="30dp"
        android:onClick="onClickLoad"
        android:text="@string/load_artist"
        tools:text="@string/load_artist" />

    <Button
        android:id="@+id/button_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_show_all"
        android:layout_marginTop="30dp"
        android:onClick="onClickShow"
        android:text="@string/show_for_artist" />

    <Button
        android:id="@+id/button_show_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_load"
        android:layout_marginTop="30dp"
        android:onClick="onClickShowAll"
        android:text="@string/show_data_in_db"
        tools:text="@string/show_data_in_db" />
</RelativeLayout>
